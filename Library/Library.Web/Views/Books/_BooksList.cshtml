@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Any())
{
<table style="width:100%" class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Id)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Title)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().ProductionYear)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Author)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Genre)</th>
        <th>Action</th>
    </tr>

    @{ foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.ProductionYear</td>
                <td>@book.Author</td>
                <td>@book.Genre.Name</td>
                <td>@Html.ActionLink("Details", "Details", "Books", new { id = book.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    }
</table>
        }
        else
        {
            return;
        }