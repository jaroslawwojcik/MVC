@model Book
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("",new {@class="text-danger" })
<div class="row">
    <div class="col-md-2 col-xs-12">
        @Html.DisplayNameFor(x => x.Author)
        
    </div>
    <div class="col-md-10 col-xs-12">
        @Html.EditorFor(x => x.Author)
        @Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2 col-xs-12">
        @Html.DisplayNameFor(x => x.Title)
    </div>
    <div class="col-md-10 col-xs-12">
        @Html.EditorFor(x => x.Title)
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2 col-xs-12">
        @Html.DisplayNameFor(x => x.ProductionYear)
    </div>
    <div class="col-md-10 col-xs-12">
        @Html.EditorFor(x => x.ProductionYear)
    </div>
    <div class="col-md-2 col-xs-12">
        @Html.DisplayNameFor(x => x.Genre)
    </div>
    <div class="col-md-10 col-xs-12">
        @Html.DropDownListFor(x => x.GenreId, (IEnumerable<SelectListItem>) ViewBag.Genres)
    </div>
</div>
 
<div class="col-md-offset-2 col-xs-12">
    <input type="submit" value="Create" class="btn btn-default" />
</div>

}